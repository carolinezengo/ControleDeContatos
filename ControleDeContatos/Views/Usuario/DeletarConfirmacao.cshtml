@model UsuarioModel
@{
    ViewData["Title"] = "Confirma deletar  Usuario";
}
<div class="text-center">

    <h3> Realmente deseja apagar o contato (@Model.Name)?</h3>

</div>
<a class="btn btn-primary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Deletar" role="button">Confirma a exclusão</a>