@model ContatoModel
@{
    ViewData["Title"] = "Confirma deletar  contato";
}
<div class="text-center">

    <h3> Realmente deseja apagar o usuario (@Model.Name)?</h3>



</div>
<a class="btn btn-primary btn-block" asp-controller="Contato" asp-action="Index" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-controller="Controle" asp-route-id="@Model.Id" asp-action="Deletar" role="button">Confirma a exclusão</a>